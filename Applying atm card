APP.COMPONENT.TS

import { Component } from '@angular/core';
import { FormControl, FormGroup, MinLengthValidator, Validators } from '@angular/forms';


@Component({
  selector: 'app-root',
  templateUrl: './app.component.html',
  styleUrls: ['./app.component.css']
})
export class AppComponent {
  title = 'APPLY YOUR CARD HERE';
  aform:FormGroup;

  constructor() { 
    this.aform=new FormGroup({
    accnum:new FormControl("",[Validators.required,Validators.minLength(12)]),
    mobilenumber:new FormControl("",[Validators.required,Validators.minLength(10)])
  });
  
  }
  get accnum(){
    return this.aform.get('accnum');
  }
  get mobilenumber(){
    return this.aform.get('mobilenumber');
  }
  login(){
    console.log(this.aform.value.accnum)
    console.log(this.aform.value.mobilenumber)

  }
}

APP.MODULE.TS

